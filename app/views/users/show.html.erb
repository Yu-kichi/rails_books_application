<h1><%= User.human_attribute_name(:name) %> :<%= "#{@user.name}" %></h1>
<p><%= User.human_attribute_name(:email) %> : <%= @user.email %></p>
<p><%= User.human_attribute_name(:address) %>  : <%= @user.address %></p>
<p><%= User.human_attribute_name(:zip_code) %> : <%= @user.zip_code %></p>
<p><%= User.human_attribute_name(:introduction) %> : <%= @user.introduction %></p>
<p>投稿した本の件数：<%=@book_count %><p>
<%# 自分以外編集できないようにする。 %>
<% if current_user == @user %>
  <%= link_to t("directory.link.Edit"), edit_user_path(@user) %> |
  <%= link_to "Edit password", edit_user_registration_path, class: "navbar-link" %>
  <%= link_to "Edit profile", edit_profile_path, class: "navbar-link" %>
<% end %>
